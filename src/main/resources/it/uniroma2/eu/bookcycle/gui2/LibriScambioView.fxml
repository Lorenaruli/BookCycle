<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="421.0" prefWidth="616.0" spacing="8.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.uniroma2.eu.bookcycle.gui2.LibriScambioController">

    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>

    <!-- Barra di ricerca e pulsante per tornare al profilo -->
    <HBox spacing="8.0">
        <Label text="Cerca per titolo:" />
        <TextField fx:id="authorSearchField" prefHeight="25.0" prefWidth="248.0" HBox.hgrow="ALWAYS" />
      <Button fx:id="cercaButton" onAction="#filtraLibri" prefHeight="25.0" prefWidth="132.0" text="CERCA" />
    </HBox>
   <TableView fx:id="tabella" prefHeight="357.0" prefWidth="616.0">
     <columns>
       <TableColumn fx:id="titoloColonna" prefWidth="290.0" text="TITOLO" />
       <TableColumn fx:id="autoreColonna" prefWidth="325.0" text="AUTORE" />
     </columns>
   </TableView>

    <!-- Pulsante per scambiare il libro selezionato -->
    <Button fx:id="scambiaButton" onAction="#apriScambioSelezionato" text="SCAMBIA" />
     <Button fx:id="profiloButton" onAction="#tornaAlProfilo" prefHeight="21.0" prefWidth="122.0" text="TORNA AL PROFILO" />

</VBox>
